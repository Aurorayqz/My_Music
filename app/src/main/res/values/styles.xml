<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionButton.Overflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
    </style>

    <style name="CustomDatePickerDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_fragment_animation</item>
        <item name="android:windowEnterAnimation">@anim/dialog_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_bottom</item>
    </style>

    <style name="dialog_fragment_animation">
        <item name="android:windowEnterAnimation">@anim/dialog_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_bottom</item>
    </style>

    <!--夜间模式-->
    <style name="BaseNight">
        <item name="BackgroundColor">@color/bg_night</item>
        <item name="TextColor">@color/text_night</item>
        <item name="LineColor">@color/line_night</item>
        <item name="ActionbarColor">@color/actionbar_night</item>
    </style>
    <style name="Theme.setting.night" parent="BaseNight">
    </style>
    <style name="Theme.index.night" parent="BaseNight">
    </style>
    <!--白天模式-->
    <style name="BaseDay">
        <item name="BackgroundColor">@color/bg_day</item>
        <item name="TextColor">@color/text_day</item>
        <item name="LineColor">@color/theme_color_primary</item>
        <item name="ActionbarColor">@color/theme_color_PrimaryDark</item>
    </style>
    <style name="Theme.setting.day" parent="BaseDay">
    </style>
    <style name="Theme.index.day" parent="BaseDay">
    </style>

</resources>
